<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="e-Commerce Mobile Automation Tests" verbose="1">
    <groups>
        <run>
            <include name="smoke"/>
        </run>
    </groups>

    <listeners>
        <listener class-name="utils.Listeners">
        </listener>
    </listeners>

    <test name="Smoke Tests">
        <classes>
            <!-- Add your test classes here using their fully qualified names -->
            <class name="RegistrationTests"/>
            <class name="ErrorValidationsTests"/>
        </classes>
    </test>

</suite>
